{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@webview/*": ["webview/*"],
            "@tests/*": ["tests/*"]
        },
        "types": [
            "node",
            "vscode",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types",
            "./tests"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": ["node_modules", ".vscode-test"]
}